<!DOCTYPE html>
<html>

<head>
  <title> DAB - Adopt Animal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="../../js/common.js"></script>
</head>

<body>
  <% if (user.roles == 'admin') { %>
    <%- include('./partials/navbar.ejs', {user: user}) %>
    <div class="container-fluid mt-5">
      <h2 class="p-3 text-center">Animals for Adoption - species</h2>
        <div class="list-group">
          <div class="row px-3 py-1 w-100">
            <span class="col py-1 bg-noroff">Id</span>
            <span class="col py-1 bg-noroff">Name</span>
            <span class="col py-1 bg-noroff">Options</span>
          </div>
          <% species.forEach(function(species) { %>
            <div class="row px-3 py-1 w-100">
              <span class="col py-1 bg-light">
                <%=species.id%>
              </span>
              <span class="col py-1 bg-light">
                <%=species.Species%>
              </span>
              <span class="col py-1 bg-light text-center">
                <button class="btn-sm btn-warning" onclick="updateSpecies(<%=species.id%>)">Update species</button>
                <button class="btn-sm btn-danger" onclick="confirmDelete(<%=species.id%>)">Delete species</button>
              </span>
            </div>
            <% }); %>
              <hr>
            <div class="row">
              <div class="col-4"></div>
              <div class="col-4 text-center mt-2">
                <form action="/species/add" method="POST">
                  <div class="mb-3">
                    <label for="speciesName" class="form-label mb-4">Species Name:</label>
                    <input type="text" class="form-control mb-4" id="speciesName" name="Species" required>
                  </div>
                  <button type="submit" class="btn btn-success">Add New Species</button>
                </form>
              </div>
              <div class="col-4"></div>
            </div>
      </div>
    </div>
    <% } else { %>
      <div class="container-fluid mt-5">
        <h3 class="p-3 text-center">403</h3>
        <div class="row px-3 py-1 w-100">
        <p class="text-center">Access denied</p>
        <p><a class="nav-link text-center" href="/">Click here to return to the frontpage</a></p>
      </div>
      </div>
      <% } %>
</body>

</html>